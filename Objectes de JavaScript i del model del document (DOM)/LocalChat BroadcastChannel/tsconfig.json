{
  "compilerOptions": {
    "target": "ES2017",
    "module": "ES2020",
    "lib": ["DOM", "ES2017"],
    "rootDir": "./",
    "outDir": "./dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules", "dist"]
}